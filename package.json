{
	"name": "remix-dashboard-template",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:css && remix build",
		"build:css": "postcss ./styles/global.css -d ./app/styles",
		"dev": "npm run build && concurrently \"npm:dev:*\"",
		"dev:css": "npm run build:css -- --watch",
		"dev:wrangler": "cross-env NODE_ENV=development wrangler dev --env development --local --persist",
		"dev:remix": "remix watch",
		"format": "prettier -w .",
		"lint": "eslint .",
		"start": "node --loader tsx ./server.ts",
		"test": "playwright test --project=chromium"
	},
	"dependencies": {
		"@cloudflare/kv-asset-handler": "^0.2.0",
		"@prisma/client": "^4.6.1",
		"@remix-run/cloudflare": "^1.7.5",
		"@remix-run/react": "^1.7.5",
		"clsx": "^1.2.1",
		"compression": "^1.7.4",
		"express": "^4.18.2",
		"isbot": "^3.6.5",
		"nprogress": "^0.2.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-auth": "^3.3.0",
		"remix-auth-form": "^1.2.0",
		"tsx": "^3.12.1",
		"zod": "^3.19.1",
		"zod-form-data": "^1.2.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.18.0",
		"@playwright/test": "^1.27.1",
		"@remix-run/dev": "^1.7.5",
		"@remix-run/eslint-config": "^1.7.5",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.14",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.8",
		"autoprefixer": "^10.4.13",
		"concurrently": "^7.5.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.27.0",
		"nodemon": "^2.0.20",
		"postcss": "^8.4.19",
		"postcss-cli": "^10.0.0",
		"postcss-import": "^15.0.0",
		"prettier": "^2.7.1",
		"prisma": "^4.6.1",
		"remix-flat-routes": "^0.4.8",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.8.4",
		"wrangler": "^2.3.2"
	},
	"engines": {
		"node": ">=14"
	},
	"prisma": {
		"seed": "node ./prisma/seed.js"
	}
}
